<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/buttonConnectWithFacebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_blue"
        android:onClick="connectWithFacebook"
        android:text="@string/connect_with_facebook"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonConnectWithFacebook"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="" />

    <Button
        android:id="@+id/buttonFinished"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_black"
        android:onClick="finished"
        android:text="@string/finished"
        android:textColor="@android:color/white" />

    <fragment
        android:id="@+id/selectionFragment"
        android:name="com.hangapp.android.activity.fragment.SelectionFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.hangapp.android.activity.fragment.SplashFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>