<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/abs__menu_dropdown_panel_holo_light"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imageViewUserIcon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="6dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/_user" />

    <TextView
        android:id="@+id/textViewUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imageViewUserIcon"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:padding="5dp"
        android:text="@string/sample_user_name"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="2dp"
        android:maxLines="1"
        android:text="@string/filter_broadcast"
        android:textSize="12sp" />

</RelativeLayout>