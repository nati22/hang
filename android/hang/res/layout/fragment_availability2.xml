<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textViewProposalTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/my_current_availability"
            android:textSize="16sp"
            android:textStyle="bold|italic" />

        <HorizontalScrollView
            android:id="@+id/horizScrollViewAvailability"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <com.hangapp.newandroid.util.AvailabilityButton
                    android:id="@+id/buttonAvailability00"
                    style="@style/AvailabilityButton" />

                <com.hangapp.newandroid.util.AvailabilityButton
                    android:id="@+id/buttonAvailability01"
                    style="@style/AvailabilityButton" />

                <com.hangapp.newandroid.util.AvailabilityButton
                    android:id="@+id/buttonAvailability02"
                    style="@style/AvailabilityButton" />

                <com.hangapp.newandroid.util.AvailabilityButton
                    android:id="@+id/buttonAvailability03"
                    style="@style/AvailabilityButton" />

                <com.hangapp.newandroid.util.AvailabilityButton
                    android:id="@+id/buttonAvailability04"
                    style="@style/AvailabilityButton" />

                <com.hangapp.newandroid.util.AvailabilityButton
                    android:id="@+id/buttonAvailability05"
                    style="@style/AvailabilityButton" />

                <com.hangapp.newandroid.util.AvailabilityButton
                    android:id="@+id/buttonAvailability06"
                    style="@style/AvailabilityButton" />

                <com.hangapp.newandroid.util.AvailabilityButton
                    android:id="@+id/buttonAvailability07"
                    style="@style/AvailabilityButton" />

                <com.hangapp.newandroid.util.AvailabilityButton
                    android:id="@+id/buttonAvailability08"
                    style="@style/AvailabilityButton" />

                <com.hangapp.newandroid.util.AvailabilityButton
                    android:id="@+id/buttonAvailability09"
                    style="@style/AvailabilityButton" />

                <com.hangapp.newandroid.util.AvailabilityButton
                    android:id="@+id/buttonAvailability10"
                    style="@style/AvailabilityButton" />

                <com.hangapp.newandroid.util.AvailabilityButton
                    android:id="@+id/buttonAvailability11"
                    style="@style/AvailabilityButton" />
            </LinearLayout>
        </HorizontalScrollView>

        <View
            android:id="@+id/centerAlignView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true" />

        <CheckBox
            android:id="@+id/checkBoxFree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewProposalTitle"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:text="FREE"
            android:layout_toLeftOf="@id/centerAlignView" />

        <CheckBox
            android:id="@+id/checkBoxBusy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewProposalTitle"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:text="BUSY"
            android:layout_toRightOf="@id/centerAlignView" />
        
        <SeekBar 
            android:id="@+id/availabilitySeekBar"
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkBoxFree"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</ScrollView>