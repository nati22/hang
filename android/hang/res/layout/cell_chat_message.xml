<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="false"
    android:orientation="vertical" >

    <com.facebook.widget.ProfilePictureView
        android:id="@+id/profilePictureViewMessageFrom"
        android:layout_width="@dimen/chat_profile_picture_height"
        android:layout_height="@dimen/chat_profile_picture_height"
        android:layout_alignParentRight="true"
        android:focusable="false" >
    </com.facebook.widget.ProfilePictureView>

    <TextView
        android:id="@+id/textViewMessageFrom2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/profilePictureViewMessageFrom"
        android:focusable="false"
        android:text="(message from)"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/blue_muc_chat"
        android:textSize="12sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linLayoutChatMessages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@id/profilePictureViewMessageFrom"
        android:layout_toLeftOf="@id/profilePictureViewMessageFrom"
        android:orientation="vertical"
        android:paddingLeft="5dp" >

        <TextView
            android:id="@+id/textViewMessageBody2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@id/profilePictureViewMessageFrom"
            android:focusable="false"
            android:text="Message body goes here."
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:id="@+id/bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/Gray"
        android:visibility="visible" />

</RelativeLayout>