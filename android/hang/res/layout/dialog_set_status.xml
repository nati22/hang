<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/grey_action_bar" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButtonFree"
        android:layout_alignRight="@+id/imageButtonFree"
        android:layout_below="@+id/imageButtonFree"
        android:gravity="center_horizontal"
        android:text="@string/free"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButtonBusy"
        android:layout_alignRight="@+id/imageButtonBusy"
        android:layout_below="@+id/imageButtonBusy"
        android:gravity="center_horizontal"
        android:text="@string/busy"
        android:textSize="12sp" />

    <SeekBar
        android:id="@+id/seekBarAvailabilityDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewAvailabilityDuration"
        android:layout_alignRight="@+id/textViewAvailabilityDuration"
        android:layout_below="@+id/textViewAvailabilityDuration" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center_horizontal"
        android:text="set availability"
        android:textSize="16sp" />

    <Button
        android:id="@+id/buttonSetAvailability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBarAvailabilityDuration"
        android:layout_toLeftOf="@+id/TextView01"
        android:layout_toRightOf="@+id/textView1"
        android:text="done"
        android:textSize="12sp" />

    <ImageButton
        android:id="@+id/imageButtonBusy"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/textView1"
        android:layout_alignRight="@+id/textView2"
        android:layout_marginRight="30dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/status_red" />

    <ImageButton
        android:id="@+id/imageButtonFree"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="30dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/status_green" />

    <TextView
        android:id="@+id/textViewAvailabilityDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="16dp"
        android:text="available until 3 PM today"
        android:textSize="14sp" />

</RelativeLayout>