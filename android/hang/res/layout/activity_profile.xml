<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textViewFriendName"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/profilePictureViewIcon"
        android:layout_toRightOf="@+id/profilePictureViewIcon"
        android:text="@string/no_user_name"
        android:textSize="16sp" />

    <com.facebook.widget.ProfilePictureView
        android:id="@+id/profilePictureViewIcon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="User Icon"
        android:src="@drawable/ic_action_profile_icon" >
    </com.facebook.widget.ProfilePictureView>

    <fragment
        android:id="@+id/fragment1"
        android:name="com.hangapp.newandroid.activity.fragment.ProposalFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/profilePictureViewIcon"
        android:layout_marginTop="15dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/textViewFriendName"
        android:layout_below="@+id/textViewFriendName" >

        <com.hangapp.newandroid.util.AvailabilityButton
            android:id="@+id/buttonAvailability0"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_grey"
            android:clickable="false"
            android:focusable="false"
            android:text="@string/time"
            android:textSize="12sp" />

        <com.hangapp.newandroid.util.AvailabilityButton
            android:id="@+id/buttonAvailability1"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_grey"
            android:clickable="false"
            android:focusable="false"
            android:text="@string/time"
            android:textSize="12sp" />

        <com.hangapp.newandroid.util.AvailabilityButton
            android:id="@+id/buttonAvailability2"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_grey"
            android:clickable="false"
            android:focusable="false"
            android:text="@string/time"
            android:textSize="12sp" />

        <com.hangapp.newandroid.util.AvailabilityButton
            android:id="@+id/buttonAvailability3"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_grey"
            android:clickable="false"
            android:focusable="false"
            android:text="@string/time"
            android:textSize="12sp" />

        <com.hangapp.newandroid.util.AvailabilityButton
            android:id="@+id/buttonAvailability4"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_grey"
            android:clickable="false"
            android:focusable="false"
            android:text="@string/time"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>