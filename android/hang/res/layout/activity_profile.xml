<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textViewFriendName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profilePictureViewIcon"
        android:layout_toRightOf="@+id/profilePictureViewIcon"
        android:text="User Name"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="18sp" />

    <Button
        android:id="@+id/Button02"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fragment1"
        android:layout_alignLeft="@+id/textViewFriendName"
        android:layout_below="@+id/textViewFriendName"
        android:background="@drawable/button_green"
        android:clickable="false"
        android:focusable="false"
        android:text="3 PM"
        android:textSize="12sp" />

    <Button
        android:id="@+id/Button03"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Button02"
        android:layout_alignTop="@+id/Button02"
        android:layout_toRightOf="@+id/Button02"
        android:background="@drawable/button_green"
        android:clickable="false"
        android:focusable="false"
        android:text="3 PM"
        android:textSize="12sp" />

    <Button
        android:id="@+id/Button04"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Button03"
        android:layout_alignTop="@+id/Button03"
        android:layout_toRightOf="@+id/Button03"
        android:background="@drawable/button_green"
        android:clickable="false"
        android:focusable="false"
        android:text="3 PM"
        android:textSize="12sp" />

    <Button
        android:id="@+id/Button01"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Button04"
        android:layout_below="@+id/textViewFriendName"
        android:layout_toRightOf="@+id/Button04"
        android:background="@drawable/button_green"
        android:clickable="false"
        android:focusable="false"
        android:text="3 PM"
        android:textSize="12sp" />

    <com.facebook.widget.ProfilePictureView
        android:id="@+id/profilePictureViewIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="User Icon"
        android:src="@drawable/ic_action_profile_icon" >
    </com.facebook.widget.ProfilePictureView>

    <Button
        android:id="@+id/Button05"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fragment1"
        android:layout_below="@+id/textViewFriendName"
        android:layout_toRightOf="@+id/Button01"
        android:background="@drawable/button_green"
        android:clickable="false"
        android:focusable="false"
        android:text="3 PM"
        android:textSize="12sp" />

    <fragment
        android:id="@+id/fragment1"
        android:name="com.hangapp.newandroid.activity.fragment.ProposalFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/profilePictureViewIcon"
        android:layout_marginTop="15dp" />

</RelativeLayout>