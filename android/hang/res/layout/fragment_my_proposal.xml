<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_action_bar"
    android:orientation="vertical"
    android:paddingBottom="10dp" >

    <TextView
        android:id="@+id/textViewMyProposal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="MY PROPOSAL"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewMyProposalDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textViewMyProposal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:text="@string/proposal_description"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewMyProposalLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewMyProposalDescription"
        android:layout_below="@+id/textViewMyProposalDescription"
        android:text="@string/proposal_location"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewMyProposalStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewMyProposalLocation"
        android:layout_below="@+id/textViewMyProposalLocation"
        android:text="@string/start_time"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewMyProposalInterestedCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewMyProposalStartTime"
        android:layout_alignBottom="@+id/textViewMyProposalStartTime"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="0 interested"
        android:textSize="16sp" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollViewInterestedUsers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/relativeLayoutMyProposalChatArea"
        android:layout_alignRight="@+id/relativeLayoutMyProposalChatArea"
        android:layout_below="@+id/textViewMyProposalStartTime"
        android:layout_marginTop="5dp" >

        <LinearLayout
            android:id="@+id/linLayoutInterested"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" />
    </HorizontalScrollView>

    <RelativeLayout
        android:id="@+id/relativeLayoutMyProposalChatArea"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/horizontalScrollViewInterestedUsers"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/white" >

        <ListView
            android:id="@+id/listView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonMyProposalSendMessage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" >
        </ListView>

        <View
            android:id="@+id/separatorChatFromCompose"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/editTextMyProposalMessageText"
            android:background="@color/grey_action_bar" />

        <EditText
            android:id="@+id/editTextMyProposalMessageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@+id/buttonMyProposalSendMessage"
            android:hint="Enter message here"
            android:inputType="text"
            android:textSize="12sp" />

        <Button
            android:id="@+id/buttonMyProposalSendMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/editTextMyProposalMessageText"
            android:text="@string/send"
            android:textSize="12sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageViewDeleteMyProposal"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignRight="@+id/textViewMyProposalInterestedCount"
        android:layout_alignTop="@+id/textViewMyProposal"
        android:src="@drawable/delete" />

</RelativeLayout>