<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_user_icon"
    android:layout_width="@dimen/custom_icon_height"
    android:layout_height="@dimen/custom_icon_height"
    android:orientation="vertical" >

    <com.facebook.widget.ProfilePictureView
        android:id="@+id/profilePictureView"
        android:layout_width="@dimen/custom_icon_height"
        android:layout_height="@dimen/custom_icon_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/profile"
        android:src="@drawable/ic_action_profile_icon" />

    <ImageView
        android:id="@+id/green_ring"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/custom_icon_green_ring"
        android:contentDescription="@string/custom_user_icon"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/red_ring"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/custom_icon_red_ring"
        android:contentDescription="@string/custom_user_icon"
        android:visibility="visible" />

</RelativeLayout>